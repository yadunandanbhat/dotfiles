# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
	output_format = i3bar
}

# order += "ipv6"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
# order += "disk /"
# order += "disk /home"
# order += "wireless wlp12s0"
# order += "ethernet enp9s0"
order += "battery all"
# order += "load"
order += "tztime local"

cpu_usage {
        format = " CPU  %usage "
        max_threshold = 75
}

cpu_temperature 0 {
        format = " %degrees°C "
        max_threshold = 58
}

load {
        format = " load %1min "
        # max_threshold = 0.3
}

 disk "/" {
        format = " hdd %avail "
        format = " ⛁ %avail "
}

wireless wlp12s0 {
        format_up = " W: %bitrate "
}

ethernet enp9s0 {
# if you use %speed, i3status requires root privileges
        format_up = " E: %ip %speed "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage "
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "CHR"
        # status_chr = ""
        # status_chr = "⚡"
        status_bat = "BAT"
        # status_bat = "☉"
        # status_bat = ""
        # status_unk = "?"
        status_unk = "UNK"
        status_full = "FULL"
        # status_full = "☻"
        low_threshold = 15
        threshold_type = time
}

memory {
        format = " %used "
        threshold_degraded = "1G"
        format_degraded = " MEMORY < %available "
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %d/%m/%Y %H:%M "
}
